#include <stdio.h>
int main() {
    // Corrected: Declared a character array of size 100
    char str[100]; 
    int i, count = 0;
    
    printf("Enter a sentence: ");
    // fgets() is used to safely read a line of input
    fgets(str, sizeof(str), stdin); 
    
    for (i = 0; str[i] != '\0'; i++) {
        // Counts separators (space or newline)
        if (str[i] == ' ' || str[i] == '\n') {
            count++;
        }
    }
    
    // Add 1 to the count of separators to get the total number of words.
    // Includes a basic check to prevent counting an empty string as 1 word.
    if (str[0] != '\0' && str[0] != '\n') {
        printf("Number of words: %d\n", count + 1);
    } else {
        printf("Number of words: 0\n");
    }
    
    return 0;
}
